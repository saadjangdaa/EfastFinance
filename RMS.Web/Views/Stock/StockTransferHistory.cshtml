@model RMS.Web.Models.ViewModels.VoucherMasterViewModel

@{
    ViewBag.Title = "StockTransferHistory";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <a id="btnback" class="btn btn-dark">Back</a>

        @if (Model.vouchertypeid == 12)
        {
            <h1 class="m-0 font-weight-bold  text-center" style="color:black;"> Stock Transfer History</h1>
        }
        else if (Model.vouchertypeid == 13)
        {
            <h1 class="m-0 font-weight-bold  text-center" style="color:black;"> Receive From History</h1>

        }
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th style="color:white;">
                            VoucherCreateDate
                        </th>
                        <th style="color:white;">
                            AccountName
                        </th>
                        <th style="color:white;">
                            VoucherNum_BillNum
                        </th>
                        <th style="color:white;">
                            Narration
                        </th>

                        <th style="color:white;">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tfoot class="thead-dark">
                    <tr>
                        <th style="color:white;">
                            VoucherCreateDate
                        </th>
                        <th style="color:white;">
                            AccountName
                        </th>
                        <th style="color:white;">
                            VoucherNum_BillNum
                        </th>
                        <th style="color:white;">
                            Narration
                        </th>

                        <th style="color:white;">
                            Actions
                        </th>
                    </tr>
                </tfoot>
                <tbody>
                    @if (Model.Vouchermasterlist != null)
                    {
                        foreach (var item in Model.Vouchermasterlist)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.VoucherCreateDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Account.AccountName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.vouchermasterid)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Narration)
                                </td>

                                <td>
                                    @*<a href="~/Purchase/detailPVoucher/@item.vouchermasterid" class="btn btn-success"><i class="glyphicon glyphicon-info-sign"></i> Details</a>*@
                                    <a href="~/Stock/EditStockVoucher/@item.vouchermasterid" class="btn btn-primary"><i class="glyphicon glyphicon-edit"></i> Edit</a>
                                    <a data-id="@item.vouchermasterid" class="btndelete btn btn-danger"><i class="glyphicon glyphicon-remove-circle"></i> Reverse</a>



                                </td>
                            </tr>

                        }
                    }


                </tbody>
            </table>
        </div>
    </div>


</div>


<script>
    $('.btndelete').click(function () {

        DeleteBill();

    });
</script>