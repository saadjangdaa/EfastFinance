@model IEnumerable<RMS.Web.Models.OrderChild>

@{
    ViewBag.Title = "OrderChild";
}

<h1 class="col-lg-offset-5 " style="color:slategrey">OrderChild</h1>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"></h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead style="background-color:yellow">
                   
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.OrderMasterID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ItemID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UnitPrice)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Discount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Total)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quantity)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderMasterID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Items.ItemName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UnitPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Discount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Total)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.OrderChildID }) |
                            </td>
                        </tr>
                    }
                </tbody>
                    </table>
            </div>
</div>
</div>
