@model IEnumerable<RMS.Web.Models.Transactions>

@{
    ViewBag.Title = "Transactions";
}

<!-- Custom styles for this template -->


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h1 class="m-0 font-weight-bold  text-center" style="color:black;">Transactions</h1>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead style="background-color:grey">
                    <tr>
                        <th style="color:white;">Transaction Type</th>
                        <th style="color:white;">
                            @Html.DisplayNameFor(model => model.Quantity)
                        </th>
                        <th style="color:white;">
                            @Html.DisplayNameFor(model => model.TransDate)
                        </th>
                        <th style="color:white;">
                            @Html.DisplayNameFor(model => model.Items.ItemName)
                        </th>
                        <th style="color:white;">
                            @Html.DisplayNameFor(model => model.PaymentTypes.PaymentTypeName)
                        </th>
                    </tr>
                </thead>
                <tfoot style="background-color:grey" >
                    <tr>
                        <th style="color:white;">Transaction Type</th>

                        <th style="color:white;">
                            @Html.DisplayNameFor(model => model.Quantity)
                        </th>
                        <th style="color:white;">
                            @Html.DisplayNameFor(model => model.TransDate)
                        </th>
                        <th style="color:white;">
                            @Html.DisplayNameFor(model => model.Items.ItemName)
                        </th>
                        <th style="color:white;">
                            @Html.DisplayNameFor(model => model.PaymentTypes.PaymentTypeName)
                        </th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                            @{
                                if (item.Quantity > 0)
                                {
                        <td>Sale</td>
                            }
                            else
                            {
                                <td>Purchase</td>

                            }


                            }
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TransDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Items.ItemName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PaymentTypes.PaymentTypeName)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

