@model IEnumerable<RMS.Web.Models.AspNetUsers>

@{
    ViewBag.Title = "UsersList";
}

<div class="container-fluid">
    <h1 class="col-lg-offset-5 " style="color:slategrey"></h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a  href="/Account/ChangeUser" id="btnadd" class="btn btn-dark"><i class="glyphicon glyphicon-plus"></i> Add User</a>

            <h1 class="m-0 font-weight-bold text-center" style="color:black;">Manage Users</h1>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered " id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th style="color:white">UserID</th>
                            <th style="color:white"> User Name</th>
                            <th style="color:white"> User Email</th>
                            <th style="color:white">Actions</th>

                        </tr>
                    </thead>
                    <tfoot class="thead-dark">
                        <tr>
                            <th style="color:white">UserID</th>
                            <th style="color:white"> User Name</th>
                            <th style="color:white"> User Email</th>
                            <th style="color:white">Actions</th>

                        </tr>
                    </tfoot>

                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.UserID</td>
                                    <td>@item.UserName</td>
                                    <td>@item.Email</td>
                                    <td>
                                        <a href="/Account/UserDetails/?Id=@item.Id" class="btn btn- bg-primary"><i class="glyphicon glyphicon-edit"></i> Edit </a>
                                        <a href="#" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i> Inactive</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

