@model RMS.Web.Models.ViewModels.VoucherMasterViewModel


@{
    ViewBag.Title = "ModifySvoucher";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        @if (Model.vouchertypeid == 1)
        {
            <div class="row">
                <div class="col-md-11">
                    <h1 class="m-0 font-weight-bold  text-center" style="color:black;">Modify Sale </h1>
                </div>
                <div class="col-md-1 d-flex justify-content-center">
                    <button type="button" onclick="history.back()" class="btn btn-success ">
                        <i class="glyphicon glyphicon-arrow-left"></i> Back
                    </button>
                </div>
            </div>
            
        }
        else
        {
            <h1 class="m-0 font-weight-bold  text-center" style="color:black;">Modify Sale Return </h1>

        }
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th style="color:white;">
                            VoucherCreateDate
                        </th>
                        <th style="color:white;">
                            AccountName
                        </th>
                        <th style="color:white;">
                            VoucherNum_BillNum
                        </th>
                        <th style="color:white;">

                            Narration
                        </th>
                        @*<th style="color:white;">
                    Closing Dr/Cr NAme

                </th>*@
                        <th style="color:white;">
                            VoucherFinalTotal
                        </th>
                        <th style="color:white;">
                            Actions
                        </th>

                    </tr>
                </thead>
                <tfoot class="thead-dark">
                    <tr>
                        <th > VoucherCreateDate</th>
                        <th >AccountName</th>
                        <th >VoucherNum_BillNum</th>
                        <th > Narration </th>
                        <th > VoucherFinalTotal </th>
                        <th > Actions </th>

                    </tr>
                </tfoot>
                <tbody>
                    @if (Model.Vouchermasterlist != null)
                    {
                        foreach (var item in Model.Vouchermasterlist)
                        {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.VoucherCreateDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Account.AccountName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.vouchermasterid)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Narration)
                                </td>
                                @*<td>
                            @Html.DisplayFor(modelItem => item.DrCr.DrCrName)
                        </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.VoucherFinalTotal)
                                </td>
                                <td>
                                    <a href="~/Sales/EditSVoucher/@item.vouchermasterid" class="btn btn-success"><i class="glyphicon glyphicon-info-sign"></i> Modify</a>
                                </td>
                            </tr>
                        }

                    }
                    else
                    {
                        <tr><td></td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

