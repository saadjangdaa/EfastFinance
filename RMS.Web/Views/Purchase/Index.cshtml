                $("table > tbody > tr").each(function () {
                    var ot = parseFloat($(this).find('td:eq(7)').html());
                    pt = ot - parseFloat(ftotal);
                    //var ototal = ftotal;
                    //ototal += ftotal;

                })
            }


        $('#txtfinaltotal').val(parseFloat(pt));


    }
